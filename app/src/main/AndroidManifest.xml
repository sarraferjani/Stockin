            </intent-filter>

        </activity>
        <activity android:name=".AccueilActivity"
            android:exported="true">

            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"></category>
                <action android:name="android.intent.action.MAIN"></action>
            </intent-filter>

        </activity>
        <activity android:name=".AddCommande"
            android:exported="true">

            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"></category>
                <action android:name="android.intent.action.MAIN"></action>
            </intent-filter>

        </activity>
        <activity android:name=".ActiviyListCommande"
            android:exported="true">

            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"></category>
                <action android:name="android.intent.action.MAIN"></action>
            </intent-filter>

        </activity>
        <activity
            android:name=".view.UpdateBlogActivity"
            android:exported="false" />
        <activity
            android:name=".view.BlogFormActivity"
            android:exported="false" />
        <activity
            android:name=".view.BlogDetailActivity"
            android:exported="false" />
        <activity
            android:name=".view.BlogsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UpdateActivity"
            android:exported="false" />
        <activity
            android:name=".AddPromotion"
            android:label="Add promotion"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".listPromActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>